<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.projeto_javafx.controllers.EditController" 
      prefWidth="400.0" prefHeight="300.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- TITULO -->
    <Label text="Editar UsuÃ¡rio" styleClass="title">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>

    <!-- NOME -->
    <VBox spacing="5.0">
        <Label text="Nome Completo:"/>
        <TextField fx:id="nomeField" promptText="Digite o nome completo"/>
    </VBox>

    <!-- EMAIL -->
    <VBox spacing="5.0">
        <Label text="Email:"/>
        <TextField fx:id="emailField" promptText="Digite o email"/>
    </VBox>

    <!-- TELEFONE -->
    <VBox spacing="5.0">
        <Label text="Telefone:"/>
        <TextField fx:id="telefoneField" promptText="(99) 99999-9999"/>
    </VBox>

    <!-- BOTOES -->
    <HBox spacing="15.0" alignment="CENTER">
        <Button text="Salvar" onAction="#onSalvarClick"
                styleClass="primary-button" prefWidth="100.0"/>
        <Button text="Cancelar" onAction="#onCancelarClick"
                styleClass="secondary-button" prefWidth="100.0"/>
    </HBox>

    <!-- MENSAGENS -->
    <Label fx:id="mensagemLabel" wrapText="true" styleClass="message-label"/>

</VBox>